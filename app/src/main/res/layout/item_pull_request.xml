<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.erkumardevender.githubdemo.data.models.PullRequest"/>
        <variable
            name="pullRequest"
            type="kotlinx.coroutines.flow.MutableStateFlow&lt;PullRequest>" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginBottom="@dimen/dimen_8"
        android:padding="8dp">
        <TextView
            android:id="@+id/pr_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/barrier_user"
            android:layout_marginEnd="12dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            tools:text="Pull Request Title"
            android:background="@drawable/rounded_bg"
            android:padding="4dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:text="@{pullRequest.title}"/>
        <TextView
            android:id="@+id/pr_generation_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pr_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/generated_at"/>
        <TextView
            android:id="@+id/pr_generation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/pr_generation_label"
            app:layout_constraintStart_toEndOf="@id/pr_time_barrier"
            app:layout_constraintEnd_toStartOf="@id/barrier_user"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="12dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            dateTime="@{pullRequest.prCreatedAt}"
            tools:text="May 25, 2022"/>
        <TextView
            android:id="@+id/pr_closing_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pr_generation_barrier"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/closed_at"/>
        <TextView
            android:id="@+id/pr_closing_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/pr_closing_label"
            app:layout_constraintStart_toEndOf="@id/pr_time_barrier"
            app:layout_constraintEnd_toStartOf="@id/barrier_user"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="12dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            dateTime="@{pullRequest.prClosedAt}"
            tools:text="April 17, 2022"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/pr_generation_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/pr_title"
            app:layout_constraintStart_toStartOf="parent"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="pr_generation_time,pr_generation_label"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/pr_time_barrier"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:barrierDirection="end"
            app:constraint_referenced_ids="pr_closing_label,pr_generation_label"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/pr_title"
            app:barrierDirection="left"
            app:constraint_referenced_ids="user_avatar,user_name"/>
        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/dimen_48"
            android:layout_height="@dimen/dimen_48"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"
            tools:src="@drawable/ic_person"
            imageUrl="@{pullRequest.user.userAvatarUrl}"/>
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/user_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@{pullRequest.user.userName}"
            tools:text="DevKumar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>